<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleMovie" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subTitleBoldMovie" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subTitleMovie" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="descriptionMovie" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="singleLine">false</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="loadingInformation">
        <item name="android:text">@string/textLoadingInformation</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="emptyData">
        <item name="android:text">@string/textEmptyData</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>
</resources>